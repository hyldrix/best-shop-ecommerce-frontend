{
  "name": "project-template",
  "version": "1.0.0",
  "description": "Capstone Project Template ",
  "repository": {
    "type": "git",
    "url": "https://autocode.git.epam.com/campus_javascript/capstone-project/project-template.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "echo \"Dummy build script required for Autocode Compile\"",
    "compile": "sass ./src/scss/main.scss ./dist/style.css",
    "compile:watch": "sass ./src/scss/main.scss ./dist/style.css --watch",
    "start": "live-server . --port=7000 --open=src/index.html --no-css-inject --ignore=node_modules,dist,.git,.well-known",
    "dev": "npm run compile & npm run start",
    "lint": "npx eslint && stylelint \"**/*.scss\""
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "live-server": "^1.2.2",
    "sass": "^1.93.3",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended-scss": "^16.0.2",
    "stylelint-config-standard": "^39.0.1"
  }
}
